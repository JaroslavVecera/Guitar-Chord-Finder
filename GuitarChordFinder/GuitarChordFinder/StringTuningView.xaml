<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarChordFinder.StringTuningView">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <Label TextColor="#0075D2" FontSize="18" WidthRequest="20" VerticalTextAlignment="Center" x:Name="label" HorizontalOptions="FillAndExpand"></Label>
            <Button Clicked="OnChangeClicked" CornerRadius="500" Text="change" BackgroundColor="LightGray"></Button>
            <Button Clicked="OnRemoveClicked" CornerRadius="500" HeightRequest="50" WidthRequest="50" Text="x" BackgroundColor="MediumVioletRed" TextColor="White"></Button>
        </StackLayout>
    </ContentView.Content>
</ContentView>